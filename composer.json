{
  "name": "portlandlabs/community.concrete5.org",
  "description": "The concrete5.org community and user profile website.",
  "type": "project",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "ConcreteComposer\\" : "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ConcreteComposer\\" : "./tests"
    }
  },
  "require": {
    "composer/installers": "^1.3",
    "concrete5/core": "dev-develop",
    "concrete5/addon_concrete5_theme": "dev-2021",
    "concrete5/dependency-patches": "^1.4.0",
    "vlucas/phpdotenv": "^2.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "mockery/mockery": "^1.2"
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "allow-subpatches": [
      "concrete5/dependency-patches"
    ],
    "branch-alias": {
      "dev-8.x": "8.x-dev"
    },
    "installer-paths": {
      "public/concrete": ["type:concrete5-core"],
      "public/application/themes/{$name}": ["type:concrete5-theme"],
      "public/packages/{$name}": ["type:concrete5-package"],
      "public/application/blocks/{$name}": ["type:concrete5-block"]
    }
  },
  "repositories": {
    "addon_concrete5_theme": {
      "type": "package",
      "package": {
        "name": "concrete5/addon_concrete5_theme",
        "version": "dev-2021",
        "source": {
          "url": "https://github.com/concrete5/addon_concrete5_theme.git",
          "type": "git",
          "reference": "2021"
        }
      }
    }
  },
  "scripts": {
    "test": "phpunit",
    "post-update-cmd": [
      "ln -sf ../../vendor/concrete5/addon_concrete5_theme public/packages/concrete_cms_theme"
    ],
    "post-install-cmd": [
      "ln -sf ../../vendor/concrete5/addon_concrete5_theme public/packages/concrete_cms_theme"
    ]
  }
}
