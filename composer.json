{
  "name": "portlandlabs/community.concrete5.org",
  "description": "The concrete5.org community and user profile website.",
  "type": "project",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "autoload": {
    "psr-4": {
      "Concrete5\\Community\\" : "./public/packages/concrete5_community/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Concrete5\\Community\\" : "./tests/public/packages/concrete5_community/src"
    }
  },
  "require": {
    "composer/installers": "^1.3",
    "concrete5/core": "dev-develop",
    "kamermans/guzzle-oauth2-subscriber": "^1.0",
    "guzzlehttp/guzzle": "^6.0",
    "concrete5/addon_concrete5_theme": "^1.0",
    "vlucas/phpdotenv": "^2.4",
    "ext-zlib": "*",
    "ext-json": "*",
    "zendframework/zend-httphandlerrunner": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "mockery/mockery": "^1.2",
    "nunomaduro/collision": "^3.0",
    "bref/bref": "^0.5.4"
  },
  "config": {
    "preferred-install": "dist"
  },
  "extra": {
    "branch-alias": {
      "dev-8.x": "8.x-dev"
    },
    "installer-paths": {
      "public/concrete": ["type:concrete5-core"],
      "public/application/themes/{$name}": ["type:concrete5-theme"],
      "public/packages/{$name}": ["type:concrete5-package"],
      "public/application/blocks/{$name}": ["type:concrete5-block"]
    }
  },
  "repositories": {
    "addon_concrete5_theme": {
      "type": "package",
      "package": {
        "name": "concrete5/addon_concrete5_theme",
        "version": "1.0.0",
        "source": {
          "url": "https://github.com/concrete5/addon_concrete5_theme.git",
          "type": "git",
          "reference": "account-updates"
        }
      }
    }
  },
  "scripts": {
    "lambda:deploy": "serverless deploy",
    "lambda:local": "php -Slocalhost:9090 lambda/index.php",
    "test": "phpunit",
    "post-update-cmd": [
      "ln -sfn ../../vendor/concrete5/addon_concrete5_theme/packages/concrete5_theme ./public/packages/concrete5_theme"
    ],
    "post-install-cmd": [
      "ln -sfn ../../vendor/concrete5/addon_concrete5_theme/packages/concrete5_theme ./public/packages"
    ]
  }
}
